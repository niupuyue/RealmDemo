<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_dog_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:hint="请输入要修改小狗的年龄" />

            <EditText
                android:id="@+id/et_dog_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="请输入小狗的名称" />


            <Button
                android:id="@+id/btn_change_dog_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="改变小狗年龄" />

            <Button
                android:id="@+id/btn_add_dog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="添加小狗信息" />

            <Button
                android:id="@+id/btn_show_dog_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="显示小狗信息" />

            <Button
                android:id="@+id/btn_delete_dog_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="删除小狗信息" />

            <TextView
                android:id="@+id/tv_show_dog_info"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_marginTop="30dp" />


        </LinearLayout>

    </ScrollView>

</LinearLayout>